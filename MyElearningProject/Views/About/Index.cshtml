﻿@model List<MyElearningProject.DAL.Entites.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                Hakkımda Listesi
                <br />
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Hakkımda Adı</th>
                        <th>Hakkımda Başlığı</th>
                        <th>Hakkımda Açıklaması 1</th>
                        <th>Hakkımda Açıklaması 2</th>
                       
                       
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.AboutID</td>
                            <td>@item.AboutName</td>
                            <td>@item.Title</td>
                            <td>@item.Description1</td>
                            <td>@item.Description2</td>
                            <td><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/About/UpdateAbout/@item.AboutID" class="btn btn-outline-success">Güncelle</a></td>
                        </tr>
                    }




                </table>
                <a href="/About/AddAbout/" class="btn btn-outline-primary">Hakkımda Girişi</a>
            </div>
        </div>
    </div>
</div>
