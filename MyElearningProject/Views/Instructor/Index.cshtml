@model List<MyElearningProject.DAL.Entites.Instructor>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                Eğitmen Listesi
                <br />
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Eğitmen Adı</th>
                        <th>Eğitmen Soyadı</th>
                        <th>Eğitmen Resmi</th>
                        <th>Eğitmen Başlığı</th>
                        <th>Kapak Resmi</th>
                        @*<th>Eğitmen Adı</th>*@
                        <th>Sil</th>
                        <th>Güncelle</th>
                        <th>Kurslar</th>
                        <th>Sitede Gör</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                <tr>
                    <td>@item.InstructorID</td>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td><img src="@item.ImageUrl" style="height:50px; width:60px;border-radius:50%" /></td>
                    <td>@item.Title</td>
                    <
                    <td><img src="@item.CoverImage" style="height:50px; width:60px;border-radius:50%" /></td>

                    <td><a href="/Instructor/DeleteInstructor/@item.InstructorID" class="btn btn-outline-danger">Sil</a></td>
                    <td><a href="/Instructor/UpdateInstructor/@item.InstructorID" class="btn btn-outline-success">Güncelle</a></td>
                    <td><a href="/Instructor/#/@item.InstructorID" class="btn btn-outline-warning">Kurslar</a></td>
                    <td><a href="/Instructor/#/@item.InstructorID" class="btn btn-outline-info">Sitede Gör</a></td>
                </tr>
                    }




                </table>
                <a href="/Instructor/AddInstructor/" class="btn btn-outline-primary">Yeni Eğitmen Girişi</a>
            </div>
        </div>
    </div>
</div>