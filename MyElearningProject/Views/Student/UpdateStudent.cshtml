@model MyElearningProject.DAL.Entites.Student
@{
    ViewBag.Title = "UpdateStudent";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2> Öğrenci Güncelleme Sayfası</h2>

<form method="post">
    <label>Öğrenci ID Giriniz</label>
    @Html.TextBoxFor(x => x.StudentID, new { @class = "form-control" })
    <br /><br />

    <label>Öğrenci Adını Giriniz</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br /><br />
    <label>Öğrenci Soyadını Giriniz</label>
    @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
    <br /><br />
    <label>Öğrenci E-Mail Adresini Giriniz</label>
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    <br /><br />
    <label>Öğrenci Sifresini Oluştur</label>
    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
    <br /><br />
    <button class="btn btn-primary">Öğrenci Kaydet</button>
</form>