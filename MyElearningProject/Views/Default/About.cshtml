﻿@model List<MyElearningProject.DAL.Entites.About>
@{
    ViewBag.Title = "About";
    Layout = "~/Views/HomeLayout/Index.cshtml";
}
<link href="/Templates/Learning/img/favicon.ico" rel="icon">

<!-- Google Web Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&display=swap" rel="stylesheet">

<!-- Icon Font Stylesheet -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

<!-- Libraries Stylesheet -->
<link href="/Templates/Learning/lib/animate/animate.min.css" rel="stylesheet">
<link href="/Templates/Learning/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

<!-- Customized Bootstrap Stylesheet -->
<link href="/Templates/Learning/css/bootstrap.min.css" rel="stylesheet">

<!-- Template Stylesheet -->
<link href="/Templates/Learning/css/style.css" rel="stylesheet">
<br />
<br />
<br />
<br />
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s" style="min-height: 400px;">
                <div class="position-relative h-100">
                    <img class="img-fluid position-absolute w-100 h-100" src="/Templates/Learning/img/about.jpg" alt="" style="object-fit: cover;">
                </div>
            </div>
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.3s">
                @foreach (var item in Model)
                {
                    <h6 class="section-title bg-white text-start text-primary pe-3">@item.AboutName</h6>

                    <p class="mb-4">@item.Description1.</p>
                    <p class="mb-4">@item.Description2</p>
                }


            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="/Templates/Learning/lib/wow/wow.min.js"></script>
<script src="/Templates/Learning/lib/easing/easing.min.js"></script>
<script src="/Templates/Learning/lib/waypoints/waypoints.min.js"></script>
<script src="/Templates/Learning/lib/owlcarousel/owl.carousel.min.js"></script>

<!-- Template Javascript -->
<script src="/Templates/Learning/js/main.js"></script>